{
  "name": "riot-routehandler",
  "version": "1.0.1",
  "description": "A angular-ui-router inspired router handler for riot.js",
  "main": "lib/routehandler.js",
  "scripts": {
    "test": "karma start",
    "tdd": "karma start --reporters=spec --singleRun=false",
    "start": "npm run watch &  npm run server",
    "build": "riot src lib --template jade"
  },
  "browserify": {
    "transform": [
      [
        "riotify",
        {
          "expr": false,
          "type": "coffee",
          "template": "jade",
          "extension": ".tag"
        }
      ],
      [
        "coffeeify",
        {
          "extension": ".coffee"
        }
      ]
    ]
  },
  "author": "cris ward",
  "license": "ISC",
  "dependencies": {
    "page": "^1.6.3",
    "pagejs": "0.0.1-alpha"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "devDependencies": {
    "chai": "^3.0.0",
    "coffee-script": "^1.9.3",
    "coffeeify": "^1.1.0",
    "jade": "^1.9.2",
    "karma": "^0.13.9",
    "karma-browserify": "^4.3.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^0.5.0",
    "karma-mocha": "^0.1",
    "karma-phantomjs-launcher": "^0.1",
    "karma-sinon": "^1.0.4",
    "karma-spec-reporter": "0.0.20",
    "mocha": "^2.0.1",
    "riot": "^2.2.4",
    "riotify": "^0.1.2",
    "simulant": "^0.1.5",
    "sinon": "^1.12.2",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.2.1"
  }
}
